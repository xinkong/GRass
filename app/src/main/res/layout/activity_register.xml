<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/base_head_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_padding_left_rgiht"
        android:paddingRight="@dimen/app_padding_left_rgiht">

        <EditText
            android:id="@+id/register_et_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_et_bg"
            android:hint="请输入用户名"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/register_et_userPwd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_rectangle_et_bg"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/register_et_userPwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_rectangle_et_bg"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_color"
                android:layout_gravity="center_vertical"
                android:text="性别:"/>

            <RadioGroup
                android:id="@+id/register_rg_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/register_rb_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/sel_register_sex"
                    android:drawablePadding="10dp"
                    android:checked="true"
                    android:text="男"/>

                <RadioButton
                    android:id="@+id/register_rb_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/sel_register_sex"
                    android:drawablePadding="10dp"
                    android:text="女" />

            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/register_btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color"
            android:background="@drawable/rounded_rectangle_btn_yellow"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="注册" />


    </LinearLayout>

</LinearLayout>
