<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/base_head_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/app_padding_left_rgiht"
        android:paddingRight="@dimen/app_padding_left_rgiht"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_et_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/username" />

            <EditText
                android:id="@+id/login_et_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入用户名"
                android:inputType="number"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_et_bg"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="5dp"
                android:background="@mipmap/userpwd" />

            <EditText
                android:id="@+id/login_et_userPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="number"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/login_tv_userRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:text="用户注册"/>
            <TextView
                android:id="@+id/login_tv_userForgetPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:text="忘记密码"/>

        </RelativeLayout>


        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:textSize="16sp"
            android:background="@drawable/rounded_rectangle_btn_blue"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/text_color"
            android:text="登录" />


    </LinearLayout>

</LinearLayout>
